def increment_large_integer(digits):
    carry = 1
    for i in range(len(digits) - 1, -1, -1):
        digits[i] += carry
        if digits[i] == 10:
            digits[i] = 0
            carry = 1
        else:
            carry = 0

    if carry:
        digits.insert(0, 1)

    return digits

# Example usage:
original_digits = [9, 9, 9]
result_digits = increment_large_integer(original_digits)
print(result_digits)
